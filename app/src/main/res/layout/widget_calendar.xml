<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#808080"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widgetCalendar_imgForeYear"
            android:src="@mipmap/ic_arrow_left"
            android:padding="8dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/widgetCalendar_imgForeMonth"
            android:src="@mipmap/ic_arrow_left"
            android:padding="8dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/widgetCalendar_txtTitle"
            android:text="2015年05月"
            android:textColor="#fff"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/widgetCalendar_imgNextMonth"
            android:src="@mipmap/ic_arrow_right"
            android:padding="8dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/widgetCalendar_imgNextYear"
            android:src="@mipmap/ic_arrow_right"
            android:padding="8dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#fe3344"
        android:layout_height="35dp">
        <TextView
            android:text="一"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fe5566"/>
        <TextView
            android:text="二"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fe5566"/>
        <TextView
            android:text="三"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fe5566"/>
        <TextView
            android:text="四"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fe5566"/>
        <TextView
            android:text="五"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fe5566"/>
        <TextView
            android:text="六"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fe5566"/>
        <TextView
            android:text="日"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fe5566"/>
    <GridView
        android:id="@+id/widgetCalendar_calendar"
        android:numColumns="7"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"
        android:scrollbars="none"
        android:scrollbarSize="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>